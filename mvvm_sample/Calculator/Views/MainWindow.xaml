<Window x:Class="Calculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Views"
        xmlns:ViewModels="clr-namespace:Calculator.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Window.DataContext>
        <ViewModels:MainViewModel/>
    </Window.DataContext>

    <StackPanel>
        <TextBox Text="{Binding X}" HorizontalAlignment="Stretch"/>
        <Label Content="+" HorizontalAlignment="Center"/>
        <TextBox Text="{Binding Y}" HorizontalAlignment="Stretch"/>
        <Label Content="=" HorizontalAlignment="Center"/>
        <TextBox Text="{Binding Result}" HorizontalAlignment="Stretch"/>
        <Button Content="ADD" Command="{Binding AddCommand}"/>
        <Button Content="Hello" Command="{Binding HelloCommand}"/>
    </StackPanel>
</Window>
